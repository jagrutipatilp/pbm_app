<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dateofsync"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MapView as background -->



    <!-- Container for cards -->
    <LinearLayout
        android:id="@+id/cardsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Your card views go here -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F3F3F3"
            app:cardCornerRadius="20dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/currentloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"

                    android:checkable="false"
                    android:drawableLeft="@drawable/logo"
                    android:text="Current Location"
                    android:textAlignment="center"
                    android:textColor="#545454"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="11/B, Road near shaniwarwada ,pune,hadpasar,pune 4110099" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Near Dwarka Gate" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F3F3F3"
            app:cardCornerRadius="20dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/vechstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"

                    android:checkable="false"
                    android:drawableLeft="@drawable/logo"
                    android:text="Vechical Status"
                    android:textAlignment="center"
                    android:textColor="#545454"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/syncstatus"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"

                        android:background="#00FFFFFF"
                        android:checkable="false"
                        android:drawableLeft="@drawable/logo"
                        android:drawablePadding="0dp"
                        android:insetTop="0dp"
                        android:text="Synced"
                        android:textAlignment="viewStart"
                        android:textColor="#00897B"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="2:12 PM, 21 March 2024"
                        android:textAlignment="textStart" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/statusstatus"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"

                        android:background="#00FFFFFF"
                        android:checkable="false"
                        android:drawableLeft="@drawable/logo"
                        android:drawablePadding="0dp"
                        android:insetTop="0dp"
                        android:text="Status"
                        android:textAlignment="viewStart"
                        android:textColor="#00897B"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Locked"
                        android:textAlignment="textStart" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/hargingstatus"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"

                        android:background="#00FFFFFF"
                        android:checkable="false"
                        android:drawableLeft="@drawable/logo"
                        android:drawablePadding="0dp"
                        android:insetTop="0dp"
                        android:text="Charging"
                        android:textAlignment="viewStart"
                        android:textColor="#00897B"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="69%"
                        android:textAlignment="textStart" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/petrolstatus"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"

                        android:background="#00FFFFFF"
                        android:checkable="false"
                        android:drawableLeft="@drawable/logo"
                        android:drawablePadding="0dp"
                        android:insetTop="0dp"
                        android:text="Petrol"
                        android:textAlignment="viewStart"
                        android:textColor="#00897B"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="20%"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
